{
  "compilerOptions": {
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib",
    "module": "CommonJS",
    "target": "ES2017",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "strict": false,
    "sourceMap": true,
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
   "include": [
    "src", "types",
    "./node_modules/handlebars",
    "./node_modules/.bin"
  ],
  "exclude": [
    "./node_modules", "./src/**/*_spec.ts",
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts",
  ]
}